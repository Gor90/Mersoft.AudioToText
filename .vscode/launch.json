{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: FastAPI",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/venv/Scripts/uvicorn.exe",
            "args": [
                "main:app",
                "--reload" 
            ],
            "jinja": true,
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "OPENAI_API_KEY": ""  // Add this if using environment variables
            },
            "envFile": "${workspaceFolder}/.env",       // Point to your .env file if used
            "cwd": "${workspaceFolder}/whisper_api"
        }
    ]
}